<!--index.wxml-->
<view class="container">
  <view class='wrap' animation="{{animationSlide}}">
    <view class='timer-wrap'>
      <view class='timer timer-left'>
        <view class='circle leftcircle' animation="{{animationDataLeft}}"></view>
      </view>
      <view class='timer timer-right'>
        <view class='circle rightcircle' animation="{{animationDataRight}}"></view>
      </view>
    </view>
    <view class='last-time'>{{minutes}}:{{seconds}}</view>
    <view class='timer-event'>
      <input placeholder='取个名字吧' placeholder-style='color:#fff'></input>
    </view>
    <view wx:if='{{slideShow}}' class="timer-slide" animation="{{animationSlideBtnDown}}">
      <button plain='true' bindtap='slideDown'><image src='../../image/slide-down.png' mode='aspectFit'></image></button>
    </view>
  </view>
  <view wx:if='{{slideShow}}' class='timer-choose'>
    <button bindtap='chooseWorkTime'>工作</button>
    <button bindtap='chooseRestTime'>休息</button>
  </view>
  <button class='finish-btn' bindtap='stopTimer' animation="{{animationSlideBtnShow}}">结束</button>
</view>
